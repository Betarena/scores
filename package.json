{
	"name": "betarena-scores-platform",
	"description": "Betarena Official Scores Platform (PWA)",
	"version": "0.8.0",
	"engines": {
		"npm": "8.19.1",
		"node": "16.17.0"
	},
	"scripts": {
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"format:src": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ./src",
		"debug": "cross-env NODE_OPTIONS='--inspect' vite dev --host --port 3050",
		"debug:bull": "cross-env NODE_DEBUG='bull' vite preview --host --port 5000",
		"debug:preview": "cross-env NODE_OPTIONS='--inspect' vite preview --host --port 5000",
		"dev": "vite dev --host --port 3050",
		"dev:docker": "vite dev --host --port 5055",
		"dev:docker:up": "docker-compose -f docker-compose.dev.yml up",
		"staging": "npm run dev -- --mode staging",
		"build": "vite build",
		"preview": "vite preview --host --port 5000",
		"quick:preview:local:spin": "vite build && npm run preview",
		"start:docker": "node server-docker.js",
		"start:heroku": "node server-heroku.js",
		"@betarena/scores-lib:pull:next": "npm i @betarena/scores-lib@latest",
		"@betarena/scores-lib:link": "npm link @betarena/scores-lib"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.2.0",
		"@sveltejs/kit": "^1.5.6",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"node-fetch": "^3.1.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.50.0",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"svelte-seo": "^1.5.0",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.2",
		"vite-plugin-compression": "^0.5.1"
	},
	"type": "module",
	"dependencies": {
		"@betarena/scores-lib": "^0.9.7",
		"@lukeed/uuid": "^2.0.0",
		"@metamask/sdk": "^0.1.0",
		"@moralisweb3/client-firebase-auth-utils": "^2.14.2",
		"@moralisweb3/client-firebase-evm-auth": "2.14.2",
		"@sentry/browser": "^7.12.1",
		"@sentry/tracing": "^7.12.1",
		"@walletconnect/web3-provider": "1.7.4",
		"colorthief": "^2.3.2",
		"compression": "^1.7.4",
		"cookie": "^0.5.0",
		"express": "^4.17.3",
		"express-sslify": "^1.2.0",
		"firebase": "^9.15.0",
		"graphql-request": "^5.0.0",
		"heroku-ssl-redirect": "^0.1.1",
		"ioredis": "^5.2.3",
		"moralis": "^2.11.1",
		"request-ip": "^3.3.0",
		"unique-username-generator": "^1.1.3",
		"xml-formatter": "^2.6.1"
	}
}
