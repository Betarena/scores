git-setup:
	@echo ""
	# ‚ñì DESCRIPTION
	# ‚ñì > custom setup for GIT target executable.
	@echo ""

	# ‚ñì @see :> https://stackoverflow.com/questions/1257592/how-do-i-remove-files-saying-old-mode-100755-new-mode-100644-from-unstaged-cha
	@git config core.filemode false

	@git config \
		--list \
		--show-origin
#

